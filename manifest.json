{
  "manifest_version": 3,
  "name": "声音克隆后台管理面板",
  "version": "1.0",
  "description": "文件管理工具",
  "icons": {
    "512": "images/icon512.png"
  },
  "action": {
    "default_title": "打开后台管理面板"
  },
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
} 